.container {
  display: flex;
  flex-direction: column;
}

.hide{
  opacity: 0;
}


.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}


.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img Image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.table {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 30rpx;
  letter-spacing: 2px;
}

/* 表格样式  */

.tr {
  color: #666;
  font-size: 24rpx;
  display: flex;
  width: 100%;
  justify-content: center;
  height: 80%;
  align-items: center;
  padding: 8rpx;
}

.td {
    width:25%;
    justify-content: center;
    text-align: left;
}

.td-c {
    width:25%;
    justify-content: center;
    text-align: center;
}

.bg-w{
  background: #afb4db;
 
}
.bg-g{
  background: #E6F3F9;
}
.bg-g2{
  background: #fff;
}
